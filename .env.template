# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/forge_db

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# Security Configuration
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_32_byte_encryption_key
MFA_SECRET_KEY=your_mfa_secret_key

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=info

# Geolocation Service
GEOLOCATION_API_KEY=your_geolocation_api_key
GEOLOCATION_API_URL=https://api.example.com/geolocation

# Recovery Settings
RECOVERY_CODES_EXPIRY_DAYS=30
MAX_RECOVERY_CODES=5

# Security Settings
PASSWORD_HASH_ROUNDS=12
SESSION_TIMEOUT_MINUTES=60
MFA_CODE_LENGTH=6
MFA_CODE_EXPIRY_SECONDS=300
